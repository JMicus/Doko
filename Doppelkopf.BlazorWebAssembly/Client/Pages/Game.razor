@page "/game"

@using Radzen.Blazor
@using Enums;



<div class="fcol fcol-1">



    <div class="frow">
        @foreach (var player in gs.Players)
        {
            if (player.No != StateService.PlayerNo)
            {
                <div class="fcol fcol-1">
                    <PlayerView
                        @ref=@PlayerViews[player.No - 1]
                        Player=@player
                    />
                </div>
            }
        }
    </div>


